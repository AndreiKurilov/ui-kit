extends ../../layouts/uikitLayout.pug
include ../../components/header/header
include ../../components/footer/footer
include ../../components/footerMobile/footerMobile

block titles
  - const title = "Headers & Footers"

block backgroundColor
  - const backgroundColor = " page__wrapper_grayBackground"

block content
  .headersFooters
    .headersFooters__headerLogin
      +header({})
    .headersFooters__headerIsLogged
      +header({isLogged: true, userName: 'Юлий Цезарь'})
    .headersFooters__footer
      +footer({
        footerPromo: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»'
      })
    .headersFooters__footerMobile
      +footerMobile()
