.formElements

  section.formElements__textFields

    .formElements__textFieldDefault
      +heading({ title: "text field", state: "default" })
      +textField({ type: "email", placeholder: "Email" })

    .formElements__textFieldHover
      +heading({ title: "text field", state: "hover/focus" })
      +textField({ type: "email", isFocused: true, value: "This is pretty awesome" })

    .formElements__dropdownDefault
      +heading({ title: "dropdown" })
      +textField({ value: "Сколько гостей" })

    .formElements__maskedTextField
      +heading({ title: "masked text field" })
      +textField({ type: "date", isUppercase: true })

    .formElements__dateDropdowns 
      .formElements__dateDropdownDefault
        +heading({ title: "date dropdown" })
        +textField({ type: "date", isUppercase: true })
      .formElements__dateDropdown
        +heading({ title: "date dropdown" })
        +textField({ type: "date", isUppercase: true })

    .formElements__filterDateDropdown
      +heading({ title: "filter date dropdown" })
      +textField({ type: "date", isUppercase: true })

    .formElements__subscriptionTextField
      +heading({ title: "subscription text field" })
      +textField({ type: "email", placeholder: "Email", buttonSubscribed: true, inputWithButton: true, withButton: true })


    .formElements__checkboxExpandable
      +heading({ title: "expandable checkbox list", isExpanded: true})
      +checkboxList({ 
        checkboxList: [
          { title: "Завтрак" },
          { title: "Письменный стол", checked: true },
          { title: "Стул для кормления", checked: true },
          { title: "Кроватка", checked: true },
          { title: "Телевизор" },
          { title: "Шампунь" },
        ]
      })

    .formElements__checkboxExpandable
      +heading({ title: "expandable checkbox list", isExpanded: true})
      +checkboxList({ 
        checkboxList: [
          { title: "Завтрак" },
          { title: "Письменный стол", checked: true },
          { title: "Стул для кормления", checked: true },
          { title: "Кроватка", checked: true },
          { title: "Телевизор" },
          { title: "Шампунь" },
        ]
      })

  section.formElements__checkboxRadioButtons

    .formElements__checkbox
      +heading({ title: "checkbox buttons" })
      +checkboxList({
        checkboxList: [
          { title: "Можно курить" },
          { title: "Можно с питомцами", checked: true },
          { title: "Можно пригласить гостей (до\u00A010\u00A0человек)", checked: true },
        ]
      })

    .formElements__radioButtons
      +heading({ title: "radio buttons" })
      .formElements__radioButtons-wrapper
        +radio({ title: "Мужчина", name: "gender", value: "man", checked: true })
        +radio({title: "Женщина", name: "gender", value: "woman", checked: false })

    .formElements__toggle
      +heading({ title: "toggle" })
      .formElements__toggle-wrapper
        +toggle({ title: "Получать спецпредложения", checked: true })
        +toggle({ title: "Получать спецпредложения", checked: false })

    .formElements__like
      +heading({ title: "like button" })
      .formElements__like-wrapper
        +like({ value: "2" })
        +like({ value: "12", isGradient: true, isColored: true })

    
    .formElements__checkboxRich
      +heading({ title: " rich checkbox buttons" })
      +checkboxList({
        checkboxList: [
          { title: "Широкий коридор", isRich: true,
            description: "Ширина коридоров в номере не\u00A0менее\u00A091\u00A0см." },
          { title: "Помощник для инвалидов", isRich: true,
            description: "На 1 этаже вас встретит специалист и\u00A0проводит до номера."},
        ]
      })








