mixin dropdown(options)
  -
    let idDropdown = options.idDropdown

  .dropdown
    .dropdown__label= options.label
    .dropdown__default
    .dropdown__expand
      .dropdown__item
        .dropdown__numberOfBedrooms спальни
        .dropdown__wrapper
          button.dropdown__minus
          .dropdown__number
          button.dropdown__plus

  script.
    let minus = document.querySelector('.dropdown__minus');
    
    let plus = document.querySelector('.dropdown__plus');
    plus.setAttribute("disabled", '');
    plus.classList.add('dropdown__disabled')
    
    let numberBeds = document.querySelector('.dropdown__number');
    
    let numberDefault = 2;
    numberBeds.innerText = numberDefault;
    
    let textDefault = document.querySelector('.dropdown__default');
    textDefault.innerText = `${numberDefault} спальни,`;

    minus.addEventListener("click", function() {
      numberDefault --;
      if (numberDefault == 1) {
        minus.setAttribute("disabled", '');
        minus.classList.add('dropdown__disabled')
        plus.removeAttribute("disabled");
        plus.classList.remove('dropdown__disabled')
      }
      numberBeds.innerText = numberDefault;
      textDefault.innerText = `${numberDefault} спальня,`;

    })

    plus.addEventListener("click", function() {
      numberDefault ++;
      if (numberDefault == 2) {
        plus.setAttribute("disabled", '');
        plus.classList.add('dropdown__disabled')
        minus.removeAttribute("disabled");
        minus.classList.remove('dropdown__disabled')
      }
      numberBeds.innerText = numberDefault;
      textDefault.innerText = `${numberDefault} спальни,`;
    })
