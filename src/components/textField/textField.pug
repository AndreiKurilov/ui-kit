mixin textField({ size="", type="", placeholder="", isFocused=false, value="" })
  -
    const sizeField = `textField_size_${size}`;
    const inputFocused = isFocused ? "textField__input_isFocused" : "";
    const textUppercase = isUppercase ? "textField__input_isUppercase" : "";

    const inputAttributes = {
    class: ['textField__input', inputFocused, textUppercase],
    type: type,
    placeholder: placeholder,
    value: value
    }

  .textField(class=sizeField)
    input&attributes(inputAttributes)
      
