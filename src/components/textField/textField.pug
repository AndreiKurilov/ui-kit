mixin textField({ type="", placeholder="", value="", isFocused=false, isUppercase=false, withButton=false, buttonSubscribed=false, inputmode="" })
  -
    const focused = isFocused ? "textField_isFocused" : "";
    const textUppercase = isUppercase ? "textField__input_isUppercase" : "";
    const inputWithButton = withButton ? "textField__input_withButton" : "";

    const inputAttributes = {
      class: ['textField__input', textUppercase, inputWithButton],
      type: type,
      placeholder: placeholder,
      value: value
    }

    const buttonAttributes = {
      class: ["textField__buttonSubscribed"],
      type: "submit",
      name: "subscribe"
    }

  .textField(class=focused)
    input&attributes(inputAttributes)
    if (buttonSubscribed)
       button&attributes(buttonAttributes)
      
