mixin dropdownItem({ title="", count="", id="" })
 
  .dropdownItem 
    .dropdownItem__name #{title}
    .dropdownItem__buttons
      button&attributes({
        class: "dropdownItem__btnMinus",
        type: "button"
      })
      input&attributes({
        class: "dropdownItem__number", 
        type: "text", 
        readonly: true,
        value: count,
        id: id
      })
      button&attributes({
        class: "dropdownItem__btnPlus",
        type: "button"
      })
