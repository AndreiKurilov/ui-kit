include ../roomNumber/roomNumber
include ../roomPrice/roomPrice
include ../rate/rate
include ../commentCount/commentCount
include ../carousel/carousel

mixin roomWidget({ number="", isLux="", price="", numberComments="", review="", roomPhoto="", starsChecked=0, images=[] })
  .roomWidget
    .roomWidget__carousel
      +carousel( images )
    .roomWidget__wrapper
      .roomWidget__info
        .roomWidget__number
          +roomNumber({ symbol: "№", number: number, isLux: isLux })
        .roomWidget__price
          +roomPrice({ price: price, currency: "₽", perDay: "в сутки" })
      .roomWidget__border
      .roomWidget__rating
        .roomWidget__rate
          +rate({ starsChecked, isChecked: true })
        .roomWidget__commentCount
          +commentCount({ numberComments: numberComments, review: review })
