include ../dropdownItem/dropdownItem

mixin dropdown({ isExpanded=false, options=[], dropdownGuests=false })
  -
    const dropdownExpand = isExpanded ? "active" : "";
    const dropdownExpandGuests = dropdownGuests ? "dropdown__expand_guests" : "";

  .dropdown
    .dropdown__block( class = dropdownExpand )
      input&attributes({
        class: "dropdown__total",
        type: "text", 
        readonly: true
      })
    .dropdown__expand( class = dropdownExpandGuests )
      each item in options
        +dropdownItem({ title: item.title, count: item.count })
      if ( dropdownGuests ) 
        .dropdown__links
          +button({ button: false, btnTitle: "очистить"})
          +button({ button: false, btnTitle: "применить"})
